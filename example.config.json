{
  "port": 3010,
  "allowed": [ "bibbox.vm:*", "localhost:*" ],
  "barcode": {
    "vid": 1529,
    "pid": 8710
  },
  "eventTimeout": 500,
  "logs": {
    "path": "logs",
    "info": "info.log",
    "error": "error.log",
    "debug": "debug.log",
    "fbs": "fbs.log",
    "offline": "offline.log",
    "frontend": "frontend.log"
  },
  "proxy": {
    "whitelistedBusEvents": [
      "^rfid.tags.detected$",
      "^rfid.tag.detected$",
      "^rfid.tag.removed$",
      "^rfid.tag.afi.set$",
      "^rfid.tag.set_afi.[\\w]+$",
      "^rfid.closed$",
      "^rfid.connected$",
      "^rfid.processing$",
      "^barcode.data$",
      "^frontend.[\\w]+$",
      "^fbs.login.[\\w]+$",
      "^fbs.patron.[\\w]+$",
      "^fbs.checkout.[\\w]+$",
      "^fbs.checkin.[\\w]+$",
      "^fbs.renew.[\\w]+$",
      "^fbs.renew.all.[\\w]+$",
      "^fbs.block.[\\w]+$",
      "^fbs.online.[\\w]+$",
      "^notification.response$",
      "^notification.error$",
      "^config.ui.update$",
      "^config.ui.update.error$",
      "^config.ui.translations.update$",
      "^config.ui.translations.error$"
    ],
    "whitelistedSocketEvents": [
      "^rfid.tags.request$",
      "^rfid.tag.set_afi$",
      "^barcode.start$",
      "^barcode.stop$",
      "^barcode.list$",
      "^fbs.login$",
      "^fbs.patron$",
      "^fbs.checkout$",
      "^fbs.checkin$",
      "^fbs.renew$",
      "^fbs.renew.all$",
      "^fbs.block$",
      "^fbs.online$",
      "^notification.status$",
      "^notification.reservations$",
      "^notification.checkIn$",
      "^notification.checkInOffline$",
      "^notification.checkOut$",
      "^notification.checkOutOffline$",
      "^logger.frontend$"
    ]
  },
  "ctrl": {
    "port": 3050,
    "allowed": [ "127.0.0.1", "::ffff:192.168.50.1" ]
  },
  "languages": {
    "locales": ["en", "da"],
    "defaultLocale": "da"
  },
  "paths": {
    "base": "files",
    "translations": "locales"
  },
  "rfid": {
    "port": 3001,
    "afi": {
      "on": "7",
      "off": "194"
    },
    "allowed": [ "127.0.0.1" ]
  },
  "offline": {
    "host": "127.0.0.1",
    "port": 6379
  },
  "bootstrap": {
    "ssl": {
      "key": "server.key",
      "cert": "server.crt"
    },
    "allowed": [ "127.0.0.1", "::ffff:192.168.50.1", "::ffff:10.215.16.142" ],
    "port": 443
  }
}
